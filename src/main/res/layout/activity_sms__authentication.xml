<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="50dp"
    android:layout_height="match_parent"
    tools:context=".AuthCALL">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:id="@+id/counttime"
            android:layout_height="wrap_content"

            android:textSize="21dp"

            android:text="20"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="27dp"
            android:id="@+id/text_message"
            android:text=" OTP \nAUTHENTICATION "></TextView>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextOTP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_otp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:id="@+id/text_other"
            android:text="Auto read OTP"></TextView>
        <EditText
            android:id="@+id/editTextOTP"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="center"
            android:hint="OTP"
            android:inputType="number"

            />
        <Button
            android:layout_width="150dp"
            android:background="#097AD5"
            android:textColor="#fff"
            android:visibility="gone"
            android:id="@+id/submit_otp"
            android:layout_height="50dp"
            android:layout_below="@+id/layout_otp"
            android:text="SUBMIT" />
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="110dp"
            android:layout_marginTop="40dp"
            android:layout_height="110dp"
            android:id="@+id/success"
            android:src="@drawable/success"
            />
    </LinearLayout>

</LinearLayout>
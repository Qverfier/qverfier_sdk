<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="50dp"
    android:layout_height="match_parent"
    tools:context=".AuthCALL">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:id="@+id/counttime"
            android:layout_height="wrap_content"

            android:textSize="21dp"

            android:text="20"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="27dp"
            android:id="@+id/text_message"
            android:text="VOICE OTP \nAUTHENTICATION "></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:id="@+id/text_other"
            android:text="Please enter OTP"></TextView>
        <LinearLayout
            android:id="@+id/layout_otp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_below="@+id/layout_header"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextone"
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusRight="@+id/editText_two">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editTexttwo"
                android:layout_width="40sp"
                android:layout_height="42sp"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/editTextthree"
                android:layout_width="40sp"
                android:layout_height="42sp"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/editTextfour"
                android:layout_width="40sp"
                android:layout_height="42sp"
                android:inputType="number"
                android:maxLength="1"/>

        </LinearLayout>
        <Button
            android:layout_width="150dp"
            android:background="#097AD5"
            android:textColor="#fff"
            android:id="@+id/submit_otp"
            android:layout_height="50dp"
            android:layout_below="@+id/layout_otp"
            android:text="SUBMIT" />
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="110dp"
            android:layout_marginTop="40dp"
            android:layout_height="110dp"
            android:id="@+id/success"
            android:src="@drawable/success"
            />
    </LinearLayout>

</LinearLayout>